{
  "expo": {
    "name": "capture",
    "slug": "capture",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "newArchEnabled": true,
    "userInterfaceStyle": "light",
    "splash": {
      "image": "./assets/icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true
    },
    "android": {
      "softwareKeyboardLayoutmode": "pan",
      "adaptiveIcon": {
        "foregroundImage": "./assets/icon.png",
        "backgroundColor": "#ffffff"
      }
    },
    "scheme": "capture",
    "linking": {
      "prefixes": ["captureapp://", "https://captureapp.org", "localhost:8081"],
      "config": {
        "screens": {
          "Auth": {
            "screens": {
              "EnterPhone": "auth/verify-email"
            }
          }
        }
      }
    }
  },
  "web": {
    "bundler": "metro"
  },
  "plugins": [
    "expo-secure-store"
  ]
}
