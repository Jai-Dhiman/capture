{
  "name": "server",
  "private": true,
  "version": "0.0.0",
  "scripts": {
    "lint": "pnpm biome check --config-path ../../biome.json .",
    "dev": "pnpm run build:wasm && wrangler dev src/index.ts",
    "deploy": "pnpm run build:wasm && wrangler deploy src/index.ts",
    "build": "pnpm run build:wasm",
    "build:wasm": "cd wasm-src && wasm-pack build --target web --out-dir ../wasm && node fix-wasm-imports.js",
    "build:wasm:dev": "cd wasm-src && wasm-pack build --target web --dev --out-dir ../wasm && node fix-wasm-imports.js",
    "test:wasm": "cd wasm-src && cargo test",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "wrangler d1 migrations apply capture-db",
    "test": "vitest",
    "test:unit": "vitest run",
    "test:e2e": "vitest run src/test/e2e.server.test.ts",
    "test:coverage": "vitest run --coverage",
    "load:test": "artillery run -t $API_URL load/basic.yml",
    "ssl:setup": "node scripts/setup-cdn-ssl.js",
    "ssl:monitor": "node scripts/monitor-ssl.js",
    "ssl:check": "node scripts/monitor-ssl.js",
    "edge:test": "node scripts/test-edge-cache.js",
    "edge:test-local": "node scripts/test-edge-cache.js http://localhost:8787"
  },
  "dependencies": {
    "@apollo/server": "^4.11.3",
    "@as-integrations/cloudflare-workers": "^1.0.2",
    "@aws-sdk/client-s3": "^3.842.0",
    "@aws-sdk/s3-request-presigner": "^3.842.0",
    "@faker-js/faker": "^9.7.0",
    "@hono/sentry": "^1.2.1",
    "@hono/zod-validator": "^0.4.2",
    "@sentry/browser": "^9.12.0",
    "@simplewebauthn/server": "^13.1.1",
    "@simplewebauthn/types": "^12.0.0",
    "drizzle-orm": "^0.39.1",
    "hono": "^4.7.2",
    "jose": "^5.9.6",
    "nanoid": "^5.0.9",
    "react-native-video": "^6.15.0",
    "tweetnacl": "^1.0.3",
    "tweetnacl-util": "^0.15.1",
    "zod": "^3.24.2"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20250317.0",
    "@hono/node-server": "^1.13.8",
    "artillery": "^2.0.9",
    "drizzle-kit": "^0.30.4",
    "msw": "^2.7.0",
    "tsx": "^4.19.2",
    "typescript": "5.5.4",
    "undici": "^7.11.0",
    "vitest": "^3.2.2",
    "wrangler": "^4.1.0"
  }
}
